# .env - Environment Configuration File
# Copy this into your backend folder as ".env" (no .txt extension)

# Development Environment
NODE_ENV=development

# Server Configuration  
PORT=3001

# JWT Secret (change this to something secure in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-2024

# Database Configuration (SQLite)
DATABASE_PATH=./predictions.db

# CORS Origins (for development)
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:5500,http://localhost:5500

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Level
LOG_LEVEL=info